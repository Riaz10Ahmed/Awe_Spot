<% include  Partials/header.ejs %>
	<h2 style="text-align:center; margin-top:20px">Add New Comment to <%= spot.name %></h2>

	<div style="width:30% ; margin:20px auto">
		<form action="/spot/<%= spot._id %>/comment" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="comments[text]" placeholder="text">
			</div>
			<div class="form-group">
				<button class="btn btn-dark btn-lg btn-block">Submit!</button>
			</div>
		</form>
		<a href="/spot">Go Back</a>
	</div>

